.side__slider
	position sticky
	top 110px
	margin-bottom 70px
	.sidebar__search
		border 2px solid $brown
		padding 30px 40px 44px 40px
		background-color $white
		display flex
		flex-wrap wrap
		margin-bottom 20px
		box-shadow 0px 4px 30px rgba(0, 0, 0, 0.05)
		&-title
			font-family $Bold
			line-height 26px
			font-size 1.25rem
			color $brown
			flex-basis 100%
		&-input
			position relative
			width 100%
			&:hover
				border-color $brown
			&:focus
				border-color $brown
		&-input input
			border none
			font-size 0.875rem
			border-bottom 1px solid #e2e2e2
			line-height 27px
			color $grayinput
			padding 10px 15px
			font-family $Italic
			transition .3s
			width 100%
		&-button
			position absolute
			height 48px
			width 24px
			bottom 0
			right 12px
			border none
			background-color inherit
			cursor pointer
			& i
				color $grayinput
				transition .3s
			&:hover i
				transform scale(1.1)
				color $brown
	.sidebar__categories
		border 2px solid $brown
		padding 30px 20px 46px 40px
		background-color $white
		display flex
		flex-direction column
		box-shadow 0px 4px 30px rgba(0, 0, 0, 0.05)
		&-title
			font-family $Bold
			line-height 26px
			color $brown
			font-size 1.25rem
			margin-bottom 30px
		&-link
			line-height 35px
			color $black
			font-family $Regular
			font-size 1.125rem
			position relative
			overflow hidden
			transition .3s
			&:after
				content ''
				position absolute
				width 10px
				height 2px
				background-color $brown
				left 0
				top 16px
				transition .3s
				transform translateX(-15px)
			&:hover
				padding-left 15px
			&:hover:after
				transform translateX(0px)
@media(max-width:55rem)
	.side__slider
		position relative
		top 0
		margin-bottom 20px
		width 100%
		.sidebar__categories
			flex-direction row
			flex-wrap wrap
			&-title
				flex-basis 100%
			&-link
				flex-basis 33%
@media(max-width:46.875rem)
	.side__slider
		.sidebar__categories
			&-link
				flex-basis 50%
@media(max-width:34.375rem)
	.side__slider
		.sidebar__categories
			&-link
				flex-basis 100%
