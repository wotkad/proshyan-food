.form
	padding 30px 40px 45px 40px
	box-shadow 0px 4px 50px rgba(0, 0, 0, 0.05)
	background-color $white
	margin-bottom 80px
	&__title
		line-height 26px
		font-family $Bold
		font-size 1.25rem
		color $brown
		margin-bottom 30px
	&__container
		display grid
		grid-template-columns repeat(4, 1fr)
		gap 20px
		&-input
			border none
			border-bottom 1px solid #e2e2e2
			font-size 0.875rem
			line-height 27px
			color $grayinput
			padding 10px 15px
			font-family $Italic
			transition .3s
			&:hover
				border-color $brown
			&:focus
				border-color $brown
		&-input:nth-child(1)
			grid-column 1 / 2
		&-input:nth-child(2)
			grid-column 2 / 3
		&-input:nth-child(3)
			grid-column 3 / 5
		&-button
			grid-column 1 / 2
			background-color $brown
			color $white
			padding 9.6px 94px 11.2px 96px
			font-family $Regular
			line-height 18px
			font-size 1.125rem
			text-align center
			max-width 280px
			position relative
			border none
			cursor pointer
			&:after
				content ''
				width 50px
				position absolute
				bottom 5px
				opacity 0
				transition .3s
				transform translateY(2px)
				height 2px
				background-color $white
				left calc(50% - 25px)
			&:hover:after
				opacity 1
				transform translateY(0px)
		&-policy
			grid-column 2 / 3
			color $graysertiftext
			line-height 16px
			font-size 0.70rem
			&-link
				border-bottom 1px solid $brown
				color $brown
				display inline-block
				transition .3s
				cursor pointer
				&:hover
					border-color $graysertiftext
@media(max-width:55rem)
	.form__container
		grid-template-columns repeat(1, 1fr)
		&-input:nth-child(1)
			grid-column 1 / 1
		&-input:nth-child(2)
			grid-column 1 / 1
		&-input:nth-child(3)
			grid-column 1 / 1
		&-button
			grid-column 1 / 1
			margin 0 auto
		&-policy
			grid-column 1 / 1
			text-align center
