.popuppolicy
	opacity 0
	z-index -1
	transition .3s
	position fixed
	top 0
	background-color $white
	box-shadow 0px 4px 30px rgba(0, 0, 0, 0.05)
	overflow-y: scroll;
	height: 100%;
	&__header
		display flex
		align-items center
		&-title
			flex-basis 100%
			font-family $Bold
			font-size 2.75rem
			line-height 150px
			color $brown
			text-align center
			margin-bottom 20px
		&-close
			position fixed
			right 68px
			top: 68px
			cursor pointer
			display flex
			justify-content center
			align-items center
			& i
				color $brown
				transition .3s
				&:hover
					color $black
	&__body
		padding 0 200px 100px
		font-family $Regular
		p
			margin-bottom 10px
		a
			margin 0 3px
			transition .3s
			&:hover
				color $brown
		li
			display block
			padding-left 16px
			position relative
			&:after
				content ''
				border-radius 50%
				background-color $brown
				width 8px
				height 8px
				display inline-block
				position absolute
				left 0
				top 8px
			&:last-child
				margin-bottom 10px
