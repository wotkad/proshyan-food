.products__overlay
	background $gradient
	height 80px
	position absolute
	z-index: 2
	bottom 0
	left 0
	right 0
.products
	padding 80px 0
	&__breadcrums
		display flex
		flex-basis 100%
		justify-content center
		align-items center
		margin-bottom 5px
		&-link
			display inline-block
			color $darkergray
			font-family $Redular
			font-size 0.875rem
			border-bottom 1px solid $darkergray
			transition .3s
			&-child
				border-bottom none
				color $darkgray
				font-family $Redular
				font-size 0.875rem
			&:hover
				border-color $brown
		& svg,
		& svg path
			margin 0 8px
			width 10px
			height 10px
			fill $darkergray
	&__title
		font-family $Bold
		font-size 2.75rem
		line-height 57px
		color $brown
		text-align center
		margin-bottom 60px
	&__categories
		width 100%
		display grid
		grid-template-columns repeat(4, 1fr)
		gap 20px
		margin-bottom 40px
		&-item
			border 1px solid $brown
			background-color $white
			font-family $Regular
			font-size 1.125rem
			line-height 23px
			padding 12px 39px 14px
			text-align center
			transition .3s
			color $brown
			display flex
			align-items center
			justify-content center
			&:hover
				color $white
				background-color $brown
			&-active
				color $white
				background-color $brown
	&__grid
		display grid
		grid-template-columns repeat(3, 1fr)
		gap 20px
		margin-bottom 40px
		&-item
			&-image
				padding 25px 30px
				min-height 240px
				position relative
				display flex
				justify-content flex-end
				flex-direction column
				overflow hidden
				&-imagedesc
					overflow hidden
					transform translateY(80%)
					z-index 3
					transition .3s
					&-title
						font-family $Bold
						font-size 1.125rem
						line-height 23px
						color $white
						margin-bottom 50px
						transition .3s
					&-text
						color $lightgray
						font-size 0.875rem
						line-height 18px
						font-family $Regalar
			&:hover .products__grid-item-image-imagedesc
				transform translateY(0%)
			&:hover .products__grid-item-image-imagedesc-title
				margin-bottom 15px
	&__nav
		display flex
		justify-content center
		&-item
			border 1px solid $brown
			background-color $white
			color $brown
			font-size 1.125rem
			line-height 23px
			font-family $Regular
			margin 0 5px
			transition .3s
			height 50px
			width 50px
			display flex
			align-items center
			justify-content center
			&:hover
				background-color $brown
				color $white
		&-item-active
			background-color $brown
			color $white
@media(max-width:62.5rem)
	.products
		padding 40px 0
	.products__categories
		grid-template-columns repeat(2, 1fr)
		&-item
			padding 12px
		&-item:last-child
			grid-column 1 / 3
	.products__grid
		grid-template-columns repeat(2, 1fr)
	.products__grid-item-image-imagedesc-title
		font-size 1.25rem
	.products__grid-item-image-imagedesc-text
		font-size 1rem
@media(max-width:40.625rem)
	.products__grid
		grid-template-columns repeat(1, 1fr)
