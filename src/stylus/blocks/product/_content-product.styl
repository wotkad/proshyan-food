.product
	display grid
	padding 80px 0
	grid-template-columns repeat(2, 1fr)
	gap 50px
	&__stickyblock
		position sticky
		top 0
		&-image
			height 410px
			display block
	&__desc
		&-breadcrums
			display flex
			flex-basis 100%
			align-items center
			margin-bottom 6px
			&-link
				display inline-block
				color $darkergray
				font-family $Redular
				font-size 0.875rem
				border-bottom 1px solid $darkergray
				transition .3s
				&-child
					border-bottom none
					color $darkgray
					font-family $Redular
					font-size 0.875rem
				&:hover
					border-color $brown
			& svg,
			& svg path
				margin 0 8px
				width 10px
				height 10px
				fill $darkergray
		&-title
			font-family $Bold
			line-height 57px
			color $brown
			font-size 2.75rem
			margin-bottom 20px
		&-prop
			display grid
			grid-template-columns repeat(6, 1fr)
			&-item
				margin-bottom 15px
				&-title
					font-family $Bold
					font-size 0.625rem
					color $grayprodtitle
					line-height 19px
					text-transform uppercase
					letter-spacing 2px
					margin-bottom 5px
				&-text
					line-height 18px
					font-family $Regular
					color $black
					font-size 0.875rem
			&-item:nth-child(1)
				grid-column 1 / 4
			&-item:nth-child(2)
				grid-column 4 / 7
			&-item:nth-child(3)
				grid-column 1 / 7
			&-item:nth-child(4)
				grid-column 1 / 3
			&-item:nth-child(5)
				grid-column 3 / 5
			&-item:nth-child(6)
				grid-column 5 / 7
			&-item:nth-child(7)
				grid-column 1 / 7
		&-sertif
			background-color $white
			height 35px
			width 90%
			display flex
			align-items center
			position relative
			border 1px solid #eee
			box-shadow 0px 4px 50px rgba(0, 0, 0, 0.05)
			&-title
				line-height 18px
				font-family $Regular
				color $black
				font-size 0.875rem
				padding 7px 15px 4px 25px
			&-bigtitle
				font-family $Bold
				font-size 3.125rem
				color $brown
				line-height 65px
				text-transform uppercase
				letter-spacing 2px
				opacity .15
				position absolute
				left 0
			&-text
				color $graysertiftext
				font-size 0.875rem
				font-family $Regular
				line-height 13px
@media(max-width:55rem)
	.product
		grid-template-columns repeat(1, 1fr)
		padding 40px 0
		&__stickyblock
			position relative
			&-image
				height 410px
				display block
		&__desc
			&-prop
				&-item:nth-child(1)
					grid-column 1 / 7
				&-item:nth-child(2)
					grid-column 1 / 7
				&-item:nth-child(3)
					grid-column 1 / 7
				&-item:nth-child(4)
					grid-column 1 / 7
				&-item:nth-child(5)
					grid-column 1 / 7
				&-item:nth-child(6)
					grid-column 1 / 7
				&-item:nth-child(7)
					grid-column 1 / 7
