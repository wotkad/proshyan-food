#social
	background url(/images/bg.png) 50% 50%
	background-repeat no-repeat
	background-size cover
.social__items
	display flex
	justify-content space-around
	padding 80px 0
	position relative
	flex-wrap wrap
	&-title
		flex-basis 100%
		font-family $Bold
		font-size 2.75rem
		line-height 57px
		color $brown
		text-align center
		margin-bottom 50px
	&-item
		flex-basis 40%
		width 40%
		box-shadow 0px 4px 30px rgba(0, 0, 0, 0.05)
@media(max-width:59.125rem)
	.social__items
		&-item:nth-child(2)
			margin-bottom 20px
@media(max-width:31.25rem)
	.social__items
		flex-direction column
		padding 40px 0
		&-item
			flex-basis 100%
			width 100%
