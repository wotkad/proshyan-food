#footer
	background url(/images/footer-bg.jpg) 50% 50%
	background-repeat no-repeat
	background-size cover
	.footer
		padding 50px 0 32px 0
		.footer__container
			display grid
			grid-template-columns repeat(4 ,1fr)
			gap 50px
			margin-bottom 50px
			.footer__info
				grid-column 1 / 2
				margin-right 10%
				&-logo
					margin 0 auto 35px auto
					max-width 209px
					display block
				&-copy
					font-size 0.875rem
					font-family $Regular
					line-height 18px
					color rgba(255,255,255,.8)
					margin-bottom 10px
				&-policy
					font-size 0.875rem
					font-family $Regular
					line-height 18px
					color $white
					border-bottom 1px solid $white
					display inline-block
					transition .3s
					text-align center
					cursor pointer
					&:hover
						color $brown
			.footer__menu
				grid-column 2 / 3
				margin-left 20%
				&-title
					font-size 1.25rem
					font-family $Bold
					line-height 26px
					color $white
					margin-bottom 26px
				&-list
					display flex
					flex-direction column
					&-item
						font-size 1rem
						font-family $Regular
						line-height 29px
						color $white
						transition .3s
						position relative
						&:after
							content: '';
							width: 50px;
							position: absolute;
							bottom: 0px;
							opacity: 0;
							left 0
							-webkit-transition: 0.3s;
							-o-transition: 0.3s;
							transition: 0.3s;
							-webkit-transform: translateY(2px);
							-ms-transform: translateY(2px);
							transform: translateY(2px);
							height: 2px;
							background-color: #bc9a6a;
						&:hover:after
							opacity 1
							transform translateY(0px)
			.footer__contact
				grid-column 3 / 5
				margin-left 2%
				&-title
					font-size 1.25rem
					font-family $Bold
					line-height 26px
					color $white
					margin-bottom 26px
				&-item
					& span
						font-size 1rem
						font-family $Regular
						line-height 29px
						color $white
					&-link
						font-size 1rem
						font-family $Regular
						line-height 29px
						color $white
						transition .3s
						&:hover
							color $brown
				&-item i
					color $white
					margin-right 8px
		&__separator
			border-bottom 1px solid rgba(255,255,255,.25)
			grid-column 1 / 5
			margin-bottom 25px
		&__author
			font-size 1rem
			font-family $Regular
			line-height 29px
			color $white
			grid-column 1 / 5
			text-align center
			&-link
				font-family $Bold
				border-bottom 1px solid $white
				display inline-block
				margin-left 3px
				color $white
				transition .3s
				&:hover
					color $brown
@media(max-width:55rem)
	#footer
		.footer
			.footer__container
				grid-template-columns repeat(2 ,1fr)
				.footer__info
					grid-column 1 / 3
					order 3
					text-align center
					margin-right 0
				.footer__menu
					grid-column 1 / 2
				.footer__contact
					grid-column 2 / 3
@media(max-width:40.625rem)
	#footer
		.footer
			.footer__container
				grid-template-columns repeat(1 ,1fr)
				.footer__info
					grid-column 1 / 3
					order 3
					margin-right 0
					text-align center
				.footer__menu
					grid-column 1 / 3
					margin-left 0
					text-align center
				.footer__contact
					grid-column 1 / 3
					text-align center
