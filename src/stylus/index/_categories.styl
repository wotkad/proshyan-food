#categories
	background url(/images/bg.png) 50% 50%
	background-repeat no-repeat
	background-size cover
	overflow-x hidden
.categories__items
	grid-template-columns repeat(9, 1fr)
	grid-template-rows repeat(4, 1fr)
	gap 20px
	display grid
	padding 80px 0
	position relative
	&-item
		min-height 110px
		z-index 2
		position relative
		&-title
			font-size 2rem
			line-height 41px
			font-family $Bold
			color $white
			z-index 2
			position relative
			&:after
				content ''
				width 100px
				position absolute
				bottom -10px
				opacity 0
				transition .3s
				transform translateY(2px)
				height 2px
				background-color $brown
				left 0
		&:hover .categories__items-item-title:after
			opacity 1
			transform translateY(0px)
	.home__overlay
		background $gradient
		height 100%
		position absolute
		z-index: 1
		bottom 0
		left 0
		right 0
	&-item:nth-child(1)
		grid-column 1 / 4
		grid-row 1 / 5
		padding 35px 50px
		background url(/images/category1.jpg) 50% 50%
		background-repeat no-repeat
		background-size cover
	&-item:nth-child(2)
		grid-column 4 / 6
		grid-row 1 / 2
		padding 30px 40px
		background url(/images/category2.jpg) 50% 50%
		background-repeat no-repeat
		background-size cover
	&-item:nth-child(3)
		grid-column 4 / 6
		grid-row 2 / 3
		padding 30px 40px
		background url(/images/category3.jpg) 50% 50%
		background-repeat no-repeat
		background-size cover
	&-item:nth-child(4)
		grid-column 4 / 6
		grid-row 3 / 4
		padding 30px 40px
		background url(/images/category4.jpg) 50% 50%
		background-repeat no-repeat
		background-size cover
	&-item:nth-child(5)
		grid-column 4 / 6
		grid-row 4 / 5
		padding 30px 40px
		background url(/images/category5.jpg) 50% 50%
		background-repeat no-repeat
		background-size cover
	&-item:nth-child(6)
		grid-column 6 / 10
		grid-row 1 / 3
		padding 35px 50px
		background url(/images/category6.jpg) 50% 50%
		background-repeat no-repeat
		background-size cover
	&-item:nth-child(7)
		grid-column 6 / 10
		grid-row 3 / 5
		padding 35px 50px
		background url(/images/category7.jpg) 50% 50%
		background-repeat no-repeat
		background-size cover
	&__image
		position absolute
		z-index 0
	&__image1
		background url(/images/pepper.png) 50% 50%
		background-repeat no-repeat
		background-size cover
		height 270px
		width 268px
		top 0
		left -134px
	&__image2
		background url(/images/garlic.png) 50% 50%
		background-repeat no-repeat
		background-size cover
		height 244px
		width 228px
		top 0
		right -114px
	&__image3
		background url(/images/mint.png) 50% 50%
		background-repeat no-repeat
		background-size cover
		height 233px
		width 226px
		bottom 0
		left -113px
	&__image4
		background url(/images/tomato.png) 50% 50%
		background-repeat no-repeat
		background-size cover
		height 193px
		width 193px
		bottom 0
		right -94.5px
@media(max-width:62.5rem)
	.categories__items
		grid-template-columns repeat(2, 1fr)
		&__image
			display none
		&-item
			min-height 200px
		&-item:nth-child(1)
			grid-column 1 / 2
			grid-row 1 / 2
		&-item:nth-child(2)
			grid-column 2 / 3
			grid-row 1 / 2
		&-item:nth-child(3)
			grid-column 1 / 2
			grid-row 2 / 3
		&-item:nth-child(4)
			grid-column 2 / 3
			grid-row 2 / 3
		&-item:nth-child(5)
			grid-column 1 / 2
			grid-row 3 / 4
		&-item:nth-child(6)
			grid-column 2 / 3
			grid-row 3 / 4
		&-item:nth-child(7)
			grid-column 1 / 3
			grid-row 4 / 5
@media(max-width:40.625rem)
	.categories__items
		grid-template-columns repeat(1, 1fr)
		grid-template-rows repeat(1, 1fr)
		padding 40px 0
		&-item
			min-height 200px
		&-item:nth-child(odd),
		&-item:nth-child(even)
			grid-column 1 / 1
		&-item:nth-child(1)
			grid-row 1 / 2
		&-item:nth-child(2)
			grid-row 2 / 3
		&-item:nth-child(3)
			grid-row 3 / 4
		&-item:nth-child(4)
			grid-row 5 / 6
		&-item:nth-child(5)
			grid-row 6 / 7
		&-item:nth-child(6)
			grid-row 7 / 8
		&-item:nth-child(7)
			grid-row 8 / 9
