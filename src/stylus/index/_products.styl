.products__overlay
	background $gradient
	height 80px
	position absolute
	z-index: 2
	bottom 0
	left 0
	right 0
.products
	padding 80px 0
	&__grid
		display grid
		grid-template-columns repeat(3, 1fr)
		gap 20px
		margin-bottom 40px
		&-item
			&-image
				padding 25px 30px
				min-height 240px
				position relative
				display flex
				justify-content flex-end
				flex-direction column
				overflow hidden
				&-imagedesc
					overflow hidden
					transform translateY(80%)
					z-index 3
					transition .3s
					&-title
						font-family $Bold
						font-size 1.125rem
						line-height 23px
						color $white
						margin-bottom 50px
						transition .3s
					&-text
						color $lightgray
						font-size 0.875rem
						line-height 18px
						font-family $Regalar
			&:hover .products__grid-item-image-imagedesc
				transform translateY(0%)
			&:hover .products__grid-item-image-imagedesc-title
				margin-bottom 15px
	&__showmore
		background-color $brown
		color $white
		padding 12px 76px 14px 76px
		font-family $Regilar
		line-height 23px
		font-size 1.125rem
		text-align center
		max-width 280px
		display block
		margin 45px auto 0 auto
		position relative
		cursor pointer
		& i
			margin-right 5px
			transition .3s
		&:hover i
			transform rotate(180deg)
@media(max-width:62.5rem)
	.products
		padding 40px 0
	.products__categories
		grid-template-columns repeat(2, 1fr)
		&-item
			padding 12px
		&-item:last-child
			grid-column 1 / 3
	.products__grid
		grid-template-columns repeat(2, 1fr)
	.products__grid-item-image-imagedesc-title
		font-size 1.25rem
	.products__grid-item-image-imagedesc-text
		font-size 1rem
@media(max-width:40.625rem)
	.products__grid
		grid-template-columns repeat(1, 1fr)
